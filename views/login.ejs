        <div class="login-container">
            <h2>Sign In</h2>
            <form id="loginForm" action="/displayRecords" method="POST">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
    
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
    
                <button type="submit" onclick="submitForm()" style="background-color: #0b3954; color: #fff; padding: 10px 15px; border: none; border-radius: 3px; cursor: pointer;">Sign In</button>
            </form>
            <p id="error-message"></p>
        </div>
        <script>
            function submitForm() {
                var username = document.getElementById('username').value;
                var password = document.getElementById('password').value;
                var errorMessage = document.getElementById('error-message');

                // Simple validation (in a real application, you'd use a more secure method)
                if (username === 'user' && password === 'pass') {
                    // Successful login
                    errorMessage.textContent = '';
                } 
                else {
                    // Display error message
                    errorMessage.textContent = 'Invalid username or password';
                }
            }
        </script>
