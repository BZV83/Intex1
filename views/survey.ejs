    function createRadioButtons(questionNumber) {
        var radioDiv = document.getElementById('rating_' + questionNumber);

        for (var j = 1; j <= 5; j++) {
            var radioInput = document.createElement('input');
            radioInput.type = 'radio';
            radioInput.id = 'rating_' + questionNumber + '_' + j;
            radioInput.name = 'rating_' + questionNumber;
            radioInput.value = j;
            radioInput.required = true;

            var label = document.createElement('label');
            label.htmlFor = 'rating_' + questionNumber + '_' + j;
            label.appendChild(document.createTextNode(j));

            radioDiv.appendChild(radioInput);
            radioDiv.appendChild(label);
        }
    }

    // Call the function for each question
    for (var i = 9; i <= 20; i++) {
        createRadioButtons(i);
