        // Function to check if radio buttons are answered for questions 9-20
        function checkRadioButtons() {
            for (var i = 9; i <= 20; i++) {
                var radioButtons = document.getElementsByName('rating_' + i);
                var isAnswered = false;

                for (var j = 0; j < radioButtons.length; j++) {
                    if (radioButtons[j].checked) {
                        isAnswered = true;
                        break;
                    }
                }

                // If not answered, show an alert and prevent form submission
                if (!isAnswered) {
                    alert('Please answer question ' + i + '.');
                    return false;
                    }
                }

            // All questions are answered, allow form submission
            return true;
        }

        // Add a submit event listener to the form
        var form = document.querySelector('.formsurvey');
        form.addEventListener('submit', checkRadioButtons);
